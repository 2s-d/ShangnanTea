<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.shangnantea.mapper.ForumReplyMapper">
    <!-- 结果映射 -->
    <resultMap id="BaseResultMap" type="com.shangnantea.model.entity.forum.ForumReply">
        <id column="id" property="id"/>
        <result column="post_id" property="postId"/>
        <result column="user_id" property="userId"/>
        <result column="content" property="content"/>
        <result column="parent_id" property="parentId"/>
        <result column="to_user_id" property="toUserId"/>
        <result column="like_count" property="likeCount"/>
        <result column="status" property="status"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <!-- 所有列 -->
    <sql id="Base_Column_List">
        id, post_id, user_id, content, parent_id, to_user_id, like_count, status, create_time, update_time
    </sql>

    <!-- 插入记录 -->
    <insert id="insert" parameterType="com.shangnantea.model.entity.forum.ForumReply">
        INSERT INTO forum_replies (
            id, post_id, user_id, content, parent_id, to_user_id, like_count, status, create_time, update_time
        ) VALUES (
            #{id}, #{postId}, #{userId}, #{content}, #{parentId}, #{toUserId}, #{likeCount}, #{status}, 
            #{createTime}, #{updateTime}
        )
    </insert>

    <!-- 根据主键删除记录 -->
    <delete id="deleteById" parameterType="java.lang.Long">
        DELETE FROM forum_replies WHERE id = #{id}
    </delete>

    <!-- 根据主键批量删除记录 -->
    <delete id="deleteByIds" parameterType="java.util.List">
        DELETE FROM forum_replies WHERE id IN
        <foreach collection="list" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <!-- 根据主键更新记录 -->
    <update id="updateById" parameterType="com.shangnantea.model.entity.forum.ForumReply">
        UPDATE forum_replies
        <set>
            <if test="postId != null">post_id = #{postId},</if>
            <if test="userId != null">user_id = #{userId},</if>
            <if test="content != null">content = #{content},</if>
            <if test="parentId != null">parent_id = #{parentId},</if>
            <if test="toUserId != null">to_user_id = #{toUserId},</if>
            <if test="likeCount != null">like_count = #{likeCount},</if>
            <if test="status != null">status = #{status},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </set>
        WHERE id = #{id}
    </update>

    <!-- 根据主键查询记录（排除已删除） -->
    <select id="selectById" parameterType="java.lang.Long" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM forum_replies
        WHERE id = #{id} AND status != 2
    </select>

    <!-- 根据主键批量查询记录 -->
    <select id="selectByIds" parameterType="java.util.List" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM forum_replies
        WHERE id IN
        <foreach collection="list" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </select>

    <!-- 查询所有记录 -->
    <select id="selectAll" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM forum_replies
    </select>

    <!-- 统计记录总数 -->
    <select id="count" resultType="java.lang.Long">
        SELECT COUNT(*) FROM forum_replies
    </select>
    
    <!-- 根据帖子ID查询回复列表 -->
    <select id="selectByPostId" parameterType="java.lang.Long" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM forum_replies
        WHERE post_id = #{postId}
        ORDER BY create_time ASC
    </select>
</mapper> 