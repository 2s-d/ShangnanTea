<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.shangnantea.mapper.ShopAnnouncementMapper">
    
    <!-- 结果映射 -->
    <resultMap id="BaseResultMap" type="com.shangnantea.model.entity.shop.ShopAnnouncement">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="shop_id" property="shopId" jdbcType="VARCHAR"/>
        <result column="title" property="title" jdbcType="VARCHAR"/>
        <result column="content" property="content" jdbcType="VARCHAR"/>
        <result column="is_top" property="isTop" jdbcType="TINYINT"/>
        <result column="status" property="status" jdbcType="TINYINT"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
        <result column="update_time" property="updateTime" jdbcType="TIMESTAMP"/>
    </resultMap>
    
    <!-- 公共列 -->
    <sql id="Base_Column_List">
        id, shop_id, title, content, is_top, status, create_time, update_time
    </sql>
    
    <!-- 根据ID查询 -->
    <select id="selectById" resultMap="BaseResultMap" parameterType="java.lang.Integer">
        SELECT <include refid="Base_Column_List"/>
        FROM shop_announcements
        WHERE id = #{id,jdbcType=INTEGER}
    </select>
    
    <!-- 根据店铺ID查询公告列表 -->
    <select id="selectByShopId" resultMap="BaseResultMap" parameterType="java.lang.String">
        SELECT <include refid="Base_Column_List"/>
        FROM shop_announcements
        WHERE shop_id = #{shopId,jdbcType=VARCHAR} AND status = 1
        ORDER BY is_top DESC, create_time DESC
    </select>
    
    <!-- 插入公告 -->
    <insert id="insert" parameterType="com.shangnantea.model.entity.shop.ShopAnnouncement" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO shop_announcements (
            shop_id, title, content, is_top, status, create_time, update_time
        ) VALUES (
            #{shopId,jdbcType=VARCHAR},
            #{title,jdbcType=VARCHAR},
            #{content,jdbcType=VARCHAR},
            #{isTop,jdbcType=TINYINT},
            #{status,jdbcType=TINYINT},
            #{createTime,jdbcType=TIMESTAMP},
            #{updateTime,jdbcType=TIMESTAMP}
        )
    </insert>
    
    <!-- 更新公告 -->
    <update id="updateById" parameterType="com.shangnantea.model.entity.shop.ShopAnnouncement">
        UPDATE shop_announcements
        <set>
            <if test="title != null">title = #{title,jdbcType=VARCHAR},</if>
            <if test="content != null">content = #{content,jdbcType=VARCHAR},</if>
            <if test="isTop != null">is_top = #{isTop,jdbcType=TINYINT},</if>
            <if test="status != null">status = #{status,jdbcType=TINYINT},</if>
            update_time = #{updateTime,jdbcType=TIMESTAMP}
        </set>
        WHERE id = #{id,jdbcType=INTEGER}
    </update>
    
    <!-- 删除公告 -->
    <delete id="deleteById" parameterType="java.lang.Integer">
        DELETE FROM shop_announcements
        WHERE id = #{id,jdbcType=INTEGER}
    </delete>
    
</mapper>
