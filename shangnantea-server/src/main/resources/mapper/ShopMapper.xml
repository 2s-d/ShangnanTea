<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.shangnantea.mapper.ShopMapper">
    <!-- 结果映射 -->
    <resultMap id="BaseResultMap" type="com.shangnantea.model.entity.shop.Shop">
        <id column="id" property="id"/>
        <result column="owner_id" property="ownerId"/>
        <result column="shop_name" property="shopName"/>
        <result column="logo" property="logo"/>
        <result column="banner" property="banner"/>
        <result column="description" property="description"/>
        <result column="announcement" property="announcement"/>
        <result column="contact_phone" property="contactPhone"/>
        <result column="province" property="province"/>
        <result column="city" property="city"/>
        <result column="district" property="district"/>
        <result column="address" property="address"/>
        <result column="business_license" property="businessLicense"/>
        <result column="status" property="status"/>
        <result column="rating" property="rating"/>
        <result column="rating_count" property="ratingCount"/>
        <result column="sales_count" property="salesCount"/>
        <result column="follow_count" property="followCount"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <!-- 所有列 -->
    <sql id="Base_Column_List">
        id, owner_id, shop_name, logo, banner, description, announcement, contact_phone, 
        province, city, district, address, business_license, status, rating, rating_count, 
        sales_count, follow_count, create_time, update_time
    </sql>

    <!-- 插入记录 -->
    <insert id="insert" parameterType="com.shangnantea.model.entity.shop.Shop">
        INSERT INTO shops (
            id, owner_id, shop_name, logo, banner, description, announcement, contact_phone, 
            province, city, district, address, business_license, status, rating, rating_count, 
            sales_count, follow_count, create_time, update_time
        ) VALUES (
            #{id}, #{ownerId}, #{shopName}, #{logo}, #{banner}, #{description}, #{announcement}, #{contactPhone},
            #{province}, #{city}, #{district}, #{address}, #{businessLicense}, #{status}, #{rating}, #{ratingCount},
            #{salesCount}, #{followCount}, #{createTime}, #{updateTime}
        )
    </insert>

    <!-- 根据主键删除记录 -->
    <delete id="deleteById" parameterType="java.lang.String">
        DELETE FROM shops WHERE id = #{id}
    </delete>

    <!-- 根据主键批量删除记录 -->
    <delete id="deleteByIds" parameterType="java.util.List">
        DELETE FROM shops WHERE id IN
        <foreach collection="list" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <!-- 根据主键更新记录 -->
    <update id="updateById" parameterType="com.shangnantea.model.entity.shop.Shop">
        UPDATE shops
        <set>
            <if test="ownerId != null">owner_id = #{ownerId},</if>
            <if test="shopName != null">shop_name = #{shopName},</if>
            <if test="logo != null">logo = #{logo},</if>
            <if test="banner != null">banner = #{banner},</if>
            <if test="description != null">description = #{description},</if>
            <if test="announcement != null">announcement = #{announcement},</if>
            <if test="contactPhone != null">contact_phone = #{contactPhone},</if>
            <if test="province != null">province = #{province},</if>
            <if test="city != null">city = #{city},</if>
            <if test="district != null">district = #{district},</if>
            <if test="address != null">address = #{address},</if>
            <if test="businessLicense != null">business_license = #{businessLicense},</if>
            <if test="status != null">status = #{status},</if>
            <if test="rating != null">rating = #{rating},</if>
            <if test="ratingCount != null">rating_count = #{ratingCount},</if>
            <if test="salesCount != null">sales_count = #{salesCount},</if>
            <if test="followCount != null">follow_count = #{followCount},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </set>
        WHERE id = #{id}
    </update>

    <!-- 根据主键查询记录 -->
    <select id="selectById" parameterType="java.lang.String" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM shops
        WHERE id = #{id}
    </select>

    <!-- 根据主键批量查询记录 -->
    <select id="selectByIds" parameterType="java.util.List" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM shops
        WHERE id IN
        <foreach collection="list" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </select>

    <!-- 查询所有记录 -->
    <select id="selectAll" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM shops
    </select>

    <!-- 统计记录总数 -->
    <select id="count" resultType="java.lang.Long">
        SELECT COUNT(*) FROM shops
    </select>
    
    <!-- 分页查询店铺列表 -->
    <select id="selectShopList" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM shops
        WHERE status = 1
        <if test="keyword != null and keyword != ''">
            AND (shop_name LIKE CONCAT('%', #{keyword}, '%') 
            OR description LIKE CONCAT('%', #{keyword}, '%'))
        </if>
        <if test="rating != null">
            AND rating >= #{rating}
        </if>
        <choose>
            <when test="sortBy != null and sortBy != ''">
                <choose>
                    <when test="sortBy == 'rating'">
                        ORDER BY rating
                        <if test="sortOrder != null and sortOrder == 'desc'">DESC</if>
                        <if test="sortOrder == null or sortOrder == 'asc'">ASC</if>
                    </when>
                    <when test="sortBy == 'salesCount'">
                        ORDER BY sales_count
                        <if test="sortOrder != null and sortOrder == 'desc'">DESC</if>
                        <if test="sortOrder == null or sortOrder == 'asc'">ASC</if>
                    </when>
                    <when test="sortBy == 'followCount'">
                        ORDER BY follow_count
                        <if test="sortOrder != null and sortOrder == 'desc'">DESC</if>
                        <if test="sortOrder == null or sortOrder == 'asc'">ASC</if>
                    </when>
                    <otherwise>
                        ORDER BY create_time DESC
                    </otherwise>
                </choose>
            </when>
            <otherwise>
                ORDER BY create_time DESC
            </otherwise>
        </choose>
        LIMIT #{offset}, #{pageSize}
    </select>

    <!-- 统计店铺总数（用于分页） -->
    <select id="countShopList" resultType="java.lang.Long">
        SELECT COUNT(*)
        FROM shops
        WHERE status = 1
        <if test="keyword != null and keyword != ''">
            AND (shop_name LIKE CONCAT('%', #{keyword}, '%') 
            OR description LIKE CONCAT('%', #{keyword}, '%'))
        </if>
        <if test="rating != null">
            AND rating >= #{rating}
        </if>
    </select>

    <!-- 根据店铺名称查询店铺 -->
    <select id="selectByShopName" parameterType="java.lang.String" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM shops
        WHERE shop_name = #{shopName}
        LIMIT 1
    </select>

    <!-- 根据用户ID查询店铺 -->
    <select id="selectByUserId" parameterType="java.lang.String" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM shops
        WHERE owner_id = #{userId}
        LIMIT 1
    </select>
    
    <!-- 根据店主用户ID查询店铺 -->
    <select id="selectByOwnerId" parameterType="java.lang.String" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM shops
        WHERE owner_id = #{ownerId}
        LIMIT 1
    </select>
</mapper> 