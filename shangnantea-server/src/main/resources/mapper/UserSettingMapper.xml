<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.shangnantea.mapper.UserSettingMapper">
    
    <!-- 结果映射 -->
    <resultMap id="BaseResultMap" type="com.shangnantea.model.entity.user.UserSetting">
        <id column="id" property="id" />
        <result column="user_id" property="userId" />
        <result column="setting_key" property="settingKey" />
        <result column="setting_value" property="settingValue" />
        <result column="setting_type" property="settingType" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
    </resultMap>
    
    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, user_id, setting_key, setting_value, setting_type, create_time, update_time
    </sql>
    
    <!-- 通过ID查询 -->
    <select id="selectById" resultMap="BaseResultMap">
        SELECT 
        <include refid="Base_Column_List" />
        FROM user_settings
        WHERE id = #{id}
    </select>
    
    <!-- 通过用户ID和键名查询 -->
    <select id="selectByUserIdAndKey" resultMap="BaseResultMap">
        SELECT 
        <include refid="Base_Column_List" />
        FROM user_settings
        WHERE user_id = #{userId} AND setting_key = #{settingKey}
    </select>
    
    <!-- 通过用户ID查询所有设置 -->
    <select id="selectByUserId" resultMap="BaseResultMap">
        SELECT 
        <include refid="Base_Column_List" />
        FROM user_settings
        WHERE user_id = #{userId}
    </select>
    
    <!-- 插入记录 -->
    <insert id="insert" parameterType="com.shangnantea.model.entity.user.UserSetting" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO user_settings (
            user_id, setting_key, setting_value, setting_type, create_time, update_time
        ) VALUES (
            #{userId}, #{settingKey}, #{settingValue}, #{settingType}, NOW(), NOW()
        )
    </insert>
    
    <!-- 根据ID更新记录 -->
    <update id="updateById" parameterType="com.shangnantea.model.entity.user.UserSetting">
        UPDATE user_settings
        SET
            setting_value = #{settingValue},
            setting_type = #{settingType},
            update_time = NOW()
        WHERE id = #{id}
    </update>
    
    <!-- 删除记录 -->
    <delete id="deleteById">
        DELETE FROM user_settings WHERE id = #{id}
    </delete>
    
    <!-- 查询所有记录 -->
    <select id="selectAll" resultMap="BaseResultMap">
        SELECT 
        <include refid="Base_Column_List" />
        FROM user_settings
    </select>
    
    <!-- 统计记录数 -->
    <select id="count" resultType="long">
        SELECT COUNT(*) FROM user_settings
    </select>
    
    <!-- 批量查询 -->
    <select id="selectByIds" resultMap="BaseResultMap">
        SELECT 
        <include refid="Base_Column_List" />
        FROM user_settings
        WHERE id IN
        <foreach collection="list" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </select>
    
    <!-- 批量删除 -->
    <delete id="deleteByIds">
        DELETE FROM user_settings
        WHERE id IN
        <foreach collection="list" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper> 