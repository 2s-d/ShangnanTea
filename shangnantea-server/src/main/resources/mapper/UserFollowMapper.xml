<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.shangnantea.mapper.UserFollowMapper">
    
    <!-- 结果映射 -->
    <resultMap id="BaseResultMap" type="com.shangnantea.model.entity.user.UserFollow">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="user_id" property="userId" jdbcType="VARCHAR"/>
        <result column="follow_type" property="followType" jdbcType="VARCHAR"/>
        <result column="follow_id" property="followId" jdbcType="VARCHAR"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
    </resultMap>
    
    <!-- 公共列 -->
    <sql id="Base_Column_List">
        id, user_id, follow_type, follow_id, create_time
    </sql>
    
    <!-- 根据ID查询关注 -->
    <select id="selectById" resultMap="BaseResultMap" parameterType="java.lang.Integer">
        SELECT 
        <include refid="Base_Column_List"/>
        FROM user_follows
        WHERE id = #{id,jdbcType=INTEGER}
    </select>
    
    <!-- 查询用户的关注列表 -->
    <select id="selectByUserId" resultMap="BaseResultMap" parameterType="java.lang.String">
        SELECT 
        <include refid="Base_Column_List"/>
        FROM user_follows
        WHERE user_id = #{userId,jdbcType=VARCHAR}
        ORDER BY create_time DESC
    </select>
    
    <!-- 根据用户ID和关注类型查询关注列表 -->
    <select id="selectByUserIdAndType" resultMap="BaseResultMap">
        SELECT 
        <include refid="Base_Column_List"/>
        FROM user_follows
        WHERE user_id = #{userId,jdbcType=VARCHAR} AND follow_type = #{followType,jdbcType=VARCHAR}
        ORDER BY create_time DESC
    </select>
    
    <!-- 查询用户是否关注了某个对象 -->
    <select id="selectByUserIdAndFollow" resultMap="BaseResultMap">
        SELECT 
        <include refid="Base_Column_List"/>
        FROM user_follows
        WHERE user_id = #{userId,jdbcType=VARCHAR} AND follow_type = #{followType,jdbcType=VARCHAR} AND follow_id = #{followId,jdbcType=VARCHAR}
        LIMIT 1
    </select>
    
    <!-- 获取被关注对象的粉丝数量 -->
    <select id="countByFollow" resultType="java.lang.Integer">
        SELECT COUNT(*)
        FROM user_follows
        WHERE follow_type = #{followType,jdbcType=VARCHAR} AND follow_id = #{followId,jdbcType=VARCHAR}
    </select>
    
    <!-- 插入关注 -->
    <insert id="insert" parameterType="com.shangnantea.model.entity.user.UserFollow" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO user_follows (
            user_id, follow_type, follow_id, create_time
        ) VALUES (
            #{userId,jdbcType=VARCHAR}, 
            #{followType,jdbcType=VARCHAR}, 
            #{followId,jdbcType=VARCHAR}, 
            #{createTime,jdbcType=TIMESTAMP}
        )
    </insert>
    
    <!-- 删除关注 -->
    <delete id="deleteById" parameterType="java.lang.Integer">
        DELETE FROM user_follows
        WHERE id = #{id,jdbcType=INTEGER}
    </delete>
    
    <!-- 取消关注 -->
    <delete id="deleteByUserIdAndFollow">
        DELETE FROM user_follows
        WHERE user_id = #{userId,jdbcType=VARCHAR} AND follow_type = #{followType,jdbcType=VARCHAR} AND follow_id = #{followId,jdbcType=VARCHAR}
    </delete>
    
    <!-- 删除用户的所有关注 -->
    <delete id="deleteByUserId" parameterType="java.lang.String">
        DELETE FROM user_follows
        WHERE user_id = #{userId,jdbcType=VARCHAR}
    </delete>
</mapper> 