<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.shangnantea.mapper.ShopReviewMapper">
    
    <!-- 结果映射 -->
    <resultMap id="BaseResultMap" type="com.shangnantea.model.entity.shop.ShopReview">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="shop_id" property="shopId" jdbcType="VARCHAR"/>
        <result column="user_id" property="userId" jdbcType="VARCHAR"/>
        <result column="rating" property="rating" jdbcType="INTEGER"/>
        <result column="content" property="content" jdbcType="VARCHAR"/>
        <result column="images" property="images" jdbcType="VARCHAR"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
        <result column="update_time" property="updateTime" jdbcType="TIMESTAMP"/>
    </resultMap>
    
    <!-- 公共列 -->
    <sql id="Base_Column_List">
        id, shop_id, user_id, rating, content, images, create_time, update_time
    </sql>
    
    <!-- 根据ID查询 -->
    <select id="selectById" resultMap="BaseResultMap" parameterType="java.lang.Integer">
        SELECT <include refid="Base_Column_List"/>
        FROM shop_reviews
        WHERE id = #{id,jdbcType=INTEGER}
    </select>
    
    <!-- 根据店铺ID分页查询评价列表 -->
    <select id="selectByShopId" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM shop_reviews
        WHERE shop_id = #{shopId,jdbcType=VARCHAR}
        ORDER BY create_time DESC
        LIMIT #{offset}, #{pageSize}
    </select>
    
    <!-- 统计店铺评价总数 -->
    <select id="countByShopId" resultType="java.lang.Long">
        SELECT COUNT(*)
        FROM shop_reviews
        WHERE shop_id = #{shopId,jdbcType=VARCHAR}
    </select>
    
    <!-- 查询用户对店铺的评价 -->
    <select id="selectByUserIdAndShopId" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM shop_reviews
        WHERE user_id = #{userId,jdbcType=VARCHAR} AND shop_id = #{shopId,jdbcType=VARCHAR}
        LIMIT 1
    </select>
    
    <!-- 插入评价 -->
    <insert id="insert" parameterType="com.shangnantea.model.entity.shop.ShopReview" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO shop_reviews (
            shop_id, user_id, rating, content, images, create_time, update_time
        ) VALUES (
            #{shopId,jdbcType=VARCHAR},
            #{userId,jdbcType=VARCHAR},
            #{rating,jdbcType=INTEGER},
            #{content,jdbcType=VARCHAR},
            #{images,jdbcType=VARCHAR},
            #{createTime,jdbcType=TIMESTAMP},
            #{updateTime,jdbcType=TIMESTAMP}
        )
    </insert>
    
    <!-- 更新评价 -->
    <update id="updateById" parameterType="com.shangnantea.model.entity.shop.ShopReview">
        UPDATE shop_reviews
        <set>
            <if test="rating != null">rating = #{rating,jdbcType=INTEGER},</if>
            <if test="content != null">content = #{content,jdbcType=VARCHAR},</if>
            <if test="images != null">images = #{images,jdbcType=VARCHAR},</if>
            update_time = #{updateTime,jdbcType=TIMESTAMP}
        </set>
        WHERE id = #{id,jdbcType=INTEGER}
    </update>
    
    <!-- 删除评价 -->
    <delete id="deleteById" parameterType="java.lang.Integer">
        DELETE FROM shop_reviews
        WHERE id = #{id,jdbcType=INTEGER}
    </delete>
    
</mapper>
